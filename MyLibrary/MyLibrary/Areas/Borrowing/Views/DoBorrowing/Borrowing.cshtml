
@{
    ViewBag.Title = "Borrowing";
}

<div class="jumbotron text-center" style="margin-bottom:50px">
    <h1>这是学生借阅书籍页面：</h1>
</div>

<form class="form-horizontal" role="form" action="/Borrowing/DoBorrowing/DoBorrowingByName" method="post">
    <div class="form-group">
        <label for="BookName" class="col-sm-2 control-label">借阅书名:</label>
        <div class="col-sm-10">
            <input type="text" name="BookName" class="form-control" id="BookName" placeholder="请输入书名" />
        </div>
    </div>
    <div class="form-group">
        <label for="StudentName" class="col-sm-2 control-label">用户姓名:</label>
        <div class="col-sm-10">
            <input type="text" name="StudentName" class="form-control" id="StudentName" placeholder="请输入用户姓名">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" id="button">确认</button>
        </div>
    </div>
</form>

<a href="~/Student/DoStudent/StudentMain">返回主页面</a>