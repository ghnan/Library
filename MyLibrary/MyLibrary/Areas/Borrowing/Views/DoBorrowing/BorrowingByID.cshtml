
@{
    ViewBag.Title = "BorrowingByID";
}

<div class="jumbotron text-center" style="margin-bottom:50px">
    <h1>这是学生借阅书籍页面：</h1>
</div>

<form class="form-horizontal" role="form" action="/Borrowing/DoBorrowing/DoBorrowingByID" method="post">
    <div class="form-group">
        <label for="BookID" class="col-sm-2 control-label">借阅书名:</label>
        <div class="col-sm-10">
            <input type="text" name="BookID" class="form-control" id="BookID" placeholder="请输入书籍ID" />
