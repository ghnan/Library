
@{
    ViewBag.Title = "SelectBook";
}

<div class="jumbotron text-center" style="margin-bottom:0">
    <h1>这是查询页面</h1>
</div>
<form class="form-horizontal" role="form" action="~/Book/DoBook/SelectBookByName">
    <div class="form-group">
        <label for="Name" class="col-sm-2 control-label">书名：</label>
        <div class="col-sm-10">
            <input type="text" name="Name" class="form-control" id="Name" placeholder="请输入需要查询的书名" />
        </div>
        <span><button type="submit" class="btn btn-default"/>确认</span>
    </div>
</form>