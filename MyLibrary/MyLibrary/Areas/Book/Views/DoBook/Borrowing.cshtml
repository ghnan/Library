
@{
    ViewBag.Title = "Borrowing";
}

<div class="jumbotron text-center" style="margin-bottom:0">
    <h1>这是学生借阅图书页面：</h1>
</div>

<form class="form-horizontal" role="form" action="~/Book/DoBook/DoBorrowingByName" method="post">
    <div class="form-group">
        <label for="Name" class="col-sm-2 control-label">书名</label>
        <div class="col-sm-10">
            <input type="text" name="Name"class="form-control" id="Name" placeholder="请输入书名" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <span><button type="submit" class="btn btn-default">确认</button></span>
        </div>
    </div>
</form>